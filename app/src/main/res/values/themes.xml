<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MSEB_Tracer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue_slate_color</item>
        <item name="colorPrimaryVariant">@color/white_smoke_background_color</item>
        <item name="colorOnPrimary">@color/white_smoke_background_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white_smoke_background_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyCustomTextEditInputField" parent="ThemeOverlay.Material3.TextInputEditText.FilledBox.Dense">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/light_blue_slate_color</item>
        <item name="helperTextTextColor">@color/black_slate_color</item>
        <item name="colorControlActivated">@color/dark_blue_slate_color</item>
        <item name="android:colorControlActivated">@color/dark_blue_slate_color</item>
        <item name="android:textColorHint">@color/dark_blue_slate_color</item>
        <item name="android:textColor">@color/dark_blue_slate_color</item>
    </style>

    <style name="MyViewBackground_Style">
        <item name="android:textColor">@color/black_slate_color</item>
        <item name="backgroundTint">@color/white_background_slate_color</item>
        <item name="android:backgroundTint">@color/white_background_slate_color</item>
        <item name="android:background">@color/white_background_slate_color</item>
    </style>

    <style name="Custom_Text_Color_Field">
        <item name="android:textColor">@color/black_slate_color</item>
    </style>

</resources>