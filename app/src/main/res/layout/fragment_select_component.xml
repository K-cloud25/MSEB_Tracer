<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/MyViewBackground_Style"
    android:backgroundTint="@color/white_background_slate_color"
    tools:context=".Fragments.SelectComponentFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:layout_marginHorizontal="10dp"
            android:paddingHorizontal="5dp"
            android:weightSum="5">

            <Button
                android:id="@+id/single_component_btn"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:textSize="25sp"
                android:text="Single Location Component"
                android:layout_height="0dp"/>

            <Button
                android:id="@+id/multiple_component_btn"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:textSize="25sp"
                android:text="Multiple Location Component"
                android:layout_height="0dp"/>

            <Button
                android:id="@+id/reload_data_btn"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="25sp"
                android:text="Reload Data"
                android:layout_height="0dp"/>

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>