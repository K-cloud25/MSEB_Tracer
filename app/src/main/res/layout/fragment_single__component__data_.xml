<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/MyViewBackground_Style"
    tools:context=".Fragments.Single_Component_Data_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/single_component_geopoint_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/single_component_name_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Component Name"
                android:textSize="30sp"
                android:gravity="start"
                style="@style/Custom_Text_Color_Field"
                android:paddingHorizontal="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:gravity="start"
                android:textSize="20sp"
                style="@style/Custom_Text_Color_Field"
                android:paddingHorizontal="20dp"
                android:text="Geo-Information"/>

            <Button
                android:id="@+id/single_component_getLatLongbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:text="Get Lat Long"/>

            <TextView
                android:id="@+id/single_component_latitude_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Latitude : "
                style="@style/Custom_Text_Color_Field"
                android:layout_marginVertical="5dp"
                android:paddingHorizontal="22dp"/>

            <TextView
                android:id="@+id/single_component_longitude_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Longitude : "
                style="@style/Custom_Text_Color_Field"
                android:layout_marginVertical="5dp"
                android:paddingHorizontal="22dp"/>

            <Button
                android:id="@+id/open_data_entering_field_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:text="Set Data"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/single_component_information_wrapper_Frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/single_component_geopoint_LinearLayout"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

</FrameLayout>